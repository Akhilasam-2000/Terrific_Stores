   <div class="image-with-text section">
 <img src="{{ section.settings.image | img_url:'master' }}" alt="{{ section.settings.title }}">
 <h2 class="heading">{{ section.settings.title }}</h2>
   <div class="image-with-text-body">{{ section.settings.text }}</div>
 </div>
 <div class="text">
  <h2 class="section-heading">{{ section.settings.section-heading }}</h2>

  <h1 class="section-large-heading">{{ section.settings.section-large-heading }}</h1>

  <p class="description">{{ section.settings.description }}</p>

    <button class="view-btn">
      <a href="{{ section.settings.view-btn-link }}">{{ section.settings.view-btn }}</a>
    </button>
 </div>
 {% schema %}
   {
     "name":"image with text",
     "settings":[
       {
         "type":"image_picker",
         "id":"image",
         "label":"image"
       },
        {
         "type":"text",
         "id":"title",
         "label":"heading",
          "default":"image with text"
       },
        {
         "type":"richtext",
         "id":"text",
         "label":"description",
          "default":"<p>write your description</p>"
         
       },
       {
      "id": "view-btn-link",
      "type": "url",
      "label": "Button URL"
    },
       {
      "id": "view-btn",
      "type": "text",
      "label": "Button name"
    }
     ],
     "presets":[
       {
         "name":"imagesectionwithtext",
         "category":"image"
       }
     ]
     
   }
 {% endschema %}
 <style>
   .image-with-text{
     display:grid;
   }
   .image-with-text-description-container{
     display:flex;
     flex-direction:column;
     justify-content:center;
     align-items:center;
     padding:25px;
   }
   .image-with-text-body{
     width:75%;
     margin:0 auto;
     padding-top:50px;
   }
 </style>
 
